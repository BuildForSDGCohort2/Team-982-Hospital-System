    <script>
        $(document).ready(function () {
                $("#table_list_2").jqGrid({
                    url:'http://localhost:8080/data/Transaction_data',
                    datatype: "json",
                    height: 450,
                    autowidth: true,
                    shrinkToFit: true,
                    rowNum: 20,
                    rowList: [10, 20, 30],
                    colNames:['trans_id','Reason', 'Amount_paid', 'Amount_due','Date_of_Payment','Time_of_Payment','Payment_method'],
                    colModel:[
                        {name:'trans_id',index:'trans_id', editable: true, width:60 },
                        {name:'Reason',index:'Reason', editable: true, width:100},
                        {name:'Amount_paid',index:'Amount_paid', editable: true, width:100},
                        {name:'Amount_due',index:'Amount_due', editable: true, width:100},
                        {name:'Date_of_Payment',index:'Date_of_Payment', editable: true, width:100},
                        {name:'Time_of_Payment',index:'Time_of_Payment', editable: true, width:80},
                        {name:'Payment_method',index:'Payment_method', editable: true, width:100}

                    ],
                    pager: "#pager_list_2",
                    viewrecords: true,
                    caption: "All Transactions",
                    add: true,
                    edit: true,
                    addtext: 'Add',
                    edittext: 'Edit',
                    hidegrid: false,
                    editurl:'http://localhost:8080/data/Transaction_data'
                });

                // Add selection
                $("#table_list_2").setSelection(4, true);


                // Setup buttons
                $("#table_list_2").jqGrid('navGrid', '#pager_list_2',
                    {edit: false, add: false, del: false, search: true},
                    {height: 200, reloadAfterSubmit: true}
                );

                // Add responsive to jqGrid
                $(window).bind('resize', function () {
                    var width = $('.jqGrid_wrapper').width();
                    $('#table_list_1').setGridWidth(width);
                    $('#table_list_2').setGridWidth(width);
                });


                setTimeout(function(){
                    $('.wrapper-content').removeClass('animated fadeInRight');
                },700);
        });

    </script>


